  #echo "ibase=16; $IN" | bc
	echo Not Calling ibase for hex2decimal
}
Xdecimal2hex(){
  #echo "obase=16; $@"|bc
	echo Not Calling ibase for decimal2hex
}

[ -s "/Users/bbos/.svm/svm.sh" ] && source "/Users/bbos/.svm/svm.sh"

export JAVA_HOME=`/usr/libexec/java_home -v 17`A

# Python and ChatGPT
# https://github.com/pyenv/pyenv#set-up-your-shell-environment-for-pyenv
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

[[ -d $HOME/anaconda3/bin ]] && export PATH="$HOME/anaconda3/bin:$PATH"

# PNPM

export PNPM_HOME="/Users/bbos/Library/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
